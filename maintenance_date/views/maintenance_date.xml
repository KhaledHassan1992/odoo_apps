<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <record id="maintenance_date_form" model="ir.ui.view">
      <field name="name">maintenance.date.form</field>
      <field name="model">account.asset.asset</field>
      <field name="inherit_id" ref="base_accounting_kit.view_account_asset_asset_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='date']" position="after">
                  <field name="maintenance_date"/>
          </xpath>
          <xpath expr="//field[@name='maintenance_date']" position="after">
                  <field name="warn_date"/>
          </xpath>
          <xpath expr="//h1" position="after">
                    <h2>
                        <field name="asset_code"/>
                    </h2>
          </xpath>
      </field>
  </record>
</odoo>

